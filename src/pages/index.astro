---
import Layout from '@layouts/Layout.astro'
import OpenGraph from '@components/OpenGraph.astro'
import ProjectCard from '@components/ui/ProjectCard.astro'
import Header from './_index/Header.astro'

const options = {
  title: 'Ricardo Cuauro | odraciRdev',
  description:
    'Una descripción que en algún momento de mi vida voy a tener que escribir'
}
---

<Layout options={options}>
  <OpenGraph
    title={options.title}
    description={options.description}
    image="/og/og.jpg"
    slot="social-media"
  />
  <main>
    <Header />
    <section>
      <h3>PROYECTOS</h3>
      <article class="cards__container">
        <ProjectCard />
        <ProjectCard />
      </article>
    </section>
  </main>
</Layout>

<style>
  main {
    width: 690px;
    padding-top: 80px;
    margin: 0 auto;

    & .cards__container {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 24px;

      & .card__project {
        border: 1px rgb(from var(--light) r g b / 0.1) solid;
        border-radius: 8px;
        padding: 16px;

        & > * + * {
          margin-top: 8px;
        }

        & h4 {
          font-family: 'Kode Mono', monospace;
          font-size: 18px;
          color: var(--blue);
          user-select: none;
        }

        & p {
          opacity: 60%;
          margin-bottom: 0;
          user-select: none;
        }

        & img {
          height: 200px;
          width: 100%;
          background-color: var(--light);
          border: inherit;
          border-radius: 8px;
        }
      }
    }
  }

  @media (width <=400px) {
    h1,
    h2,
    h3 {
      margin-bottom: 18px;
    }

    main {
      max-width: 85%;
      padding: 40px 0;
      margin: 0 auto;

      & .cards__container {
        grid-template-columns: 1fr;
      }
    }
  }
</style>

<script src="@scripts/shuffle-text.js"></script>
