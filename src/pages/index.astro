---
import { Icon } from 'astro-icon/components'
import Layout from '@layouts/Layout.astro'
import OpenGraph from '@components/OpenGraph.astro'
import ProjectCard from '@components/ui/ProjectCard.astro'

const options = {
  title: 'Ricardo Cuauro | odraciRdev',
  description:
    'Una descripción que en algún momento de mi vida voy a tener que escribir'
}
---

<Layout options={options}>
  <OpenGraph
    title={options.title}
    description={options.description}
    image="/og/og.jpg"
    slot="social-media"
  />
  <main>
    <header>
      <h1>ODRACIRDEV</h1>
      <h2>COMUNIDAD DE AUTODIDACTAS</h2>
      <p class="desc">
        El canal de Twitch odraciRdev nació con la finalidad de hacer una ruta
        de estudios para aprender lo necesario y convertirnos en desarrolladores
        frontend con recursos gratuitos y accesibles para todos.
      </p>
      <ul class="rrss">
        <li class="rrss__list">
          <a href="https://www.twitch.tv/odracirdev" target="_blank"
            ><Icon name="twitch" /> Twitch</a
          >
        </li>
        <li class="rrss__list">
          <a
            href="https://www.youtube.com/@ricardcuauro?sub_confirmation=1"
            target="_blank"><Icon name="youtube" />YouTube</a
          >
        </li>
        <li class="rrss__list">
          <a href="https://discord.gg/r6tFDfvYW6" target="_blank"
            ><Icon name="discord" /> Discord</a
          >
        </li>
        <li class="rrss__list">
          <a href="https://github.com/odracirdev" target="_blank"
            ><Icon name="github" /> Github</a
          >
        </li>
        <li class="rrss__list">
          <a href="https://www.linkedin.com/in/ricardocuauro/" target="_blank"
            ><Icon name="linkedin" />LinkedIn</a
          >
        </li>
      </ul>
    </header>
    <section>
      <h3>PROYECTOS</h3>
      <article class="cards__container">
        <ProjectCard />
        <ProjectCard />
      </article>
    </section>
  </main>
</Layout>

<style>
  main {
    width: 690px;
    padding-top: 80px;
    margin: 0 auto;

    & header {
      display: flex;
      flex-direction: column;

      & .desc {
        opacity: 80%;
        max-width: 65%;
      }

      & .rrss {
        list-style: none;
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        margin-bottom: 36px;

        & .rrss__list {
          & a {
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            color: white;
            transition: color 0.3s ease-in-out;

            &:hover {
              color: var(--blue);
            }
          }
        }
      }
    }

    & .cards__container {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 24px;

      & .card__project {
        border: 1px rgb(from var(--light) r g b / 0.1) solid;
        border-radius: 8px;
        padding: 16px;

        & > * + * {
          margin-top: 8px;
        }

        & h4 {
          font-family: 'Kode Mono', monospace;
          font-size: 18px;
          color: var(--blue);
          user-select: none;
        }

        & p {
          opacity: 60%;
          margin-bottom: 0;
          user-select: none;
        }

        & img {
          height: 200px;
          width: 100%;
          background-color: var(--light);
          border: inherit;
          border-radius: 8px;
        }
      }
    }
  }

  @media (width <=400px) {
    h1,
    h2,
    h3 {
      margin-bottom: 18px;
    }

    main {
      max-width: 85%;
      padding: 40px 0;
      margin: 0 auto;

      & header {
        & h1 {
          font-size: var(--h1-size-m);
        }

        & h2 {
          font-size: var(--h2-size-m);
        }

        & .desc {
          max-width: 100%;
        }
      }

      & .cards__container {
        grid-template-columns: 1fr;
      }
    }
  }
</style>

<script src="@scripts/shuffle-text.js"></script>
